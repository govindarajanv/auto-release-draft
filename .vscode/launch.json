    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Jest Tests",
            "program": "${workspaceFolder}/lib/main.js",
            "args": ["--inspect-brk", 
                    "${workspaceRoot}/node_modules/.bin/jest",
                    "--runInBand",
                    "--config",
                    "${workspaceRoot}/jest.config.js" ],
            "windows": {
            "args": ["--inspect-brk", 
                    "${workspaceRoot}/node_modules/jest/bin/jest.js",
                    "--runInBand",
                    "--config",
                    "${workspaceRoot}/jest.config.js" 
                ],
            },
        }
    ]
}